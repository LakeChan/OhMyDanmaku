<Window x:Class="OhMyDanmaku.Audit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Realtime Audit" Height="350" Width="500" WindowStyle="None" MouseDown="Window_MouseDown">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" VerticalAlignment="Top" Width="472"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Current Danmaku" VerticalAlignment="Top" Margin="10,195,0,0" Height="43" Width="472" TextAlignment="Center"/>
        <Button Content="Pass" HorizontalAlignment="Left" Height="64" Margin="10,268,0,0" VerticalAlignment="Top" Width="229" FontSize="15" Background="#FF00CC66" BorderBrush="{x:Null}" Foreground="White"/>
        <Button Content="Drop" Height="64" Margin="253,268,10,0" VerticalAlignment="Top" FontSize="15" Background="#FFFF3333" BorderBrush="{x:Null}" Foreground="White"/>
        <Button Content="Pass ALL" HorizontalAlignment="Left" Height="20" Margin="10,243,0,0" VerticalAlignment="Top" Width="229" Background="#FF00CC66" BorderBrush="{x:Null}" Foreground="White"/>
        <Button Content="Drop ALL" Height="20" Margin="253,243,10,0" VerticalAlignment="Top" Background="#FFFF3333" BorderBrush="{x:Null}" Foreground="White"/>
    </Grid>
</Window>
